[Tests]
  issues = '#1927'
  design = 'Outputs/index.md'

  [./test]
    type = 'Exodiff'
    input = 'output_vars_test.i'
    exodiff = 'output_vars_test_out.e'

    requirement = "The system shall support the output of elemental, nodal, scalar, and postprocessor variables in ExodusII format."
  [../]

  [./test_hidden_shown]
    type = 'RunException'
    input = 'output_vars_hidden_shown_check.i'
    expect_err = 'Output\(s\) specified to be both shown and hidden: u'

    requirement = "The system shall error if a variable is listed to both be output and suppressed."
  [../]

  [./test_nonexistent]
    type = 'RunException'
    input = 'output_vars_nonexistent.i'
    expect_err = 'Output\(s\) do not exist \(must be variable, scalar, postprocessor, or vector postprocessor\): foo1 foo2'

    requirement = "The system shall error if an unknown variable is listed to be output."
  [../]

  [./block_hide]
    # Test that the "outputs = none" works from AuxVariables and Variables blocks
    type = 'Exodiff'
    input = 'hide_output_via_variables_block.i'
    exodiff = 'hide_output_via_variables_block_out.e'

    requirement = "The system shall allow auxiliary variable output to be suppressed."
  [../]

  [./show_single_vars]
    # Tests that show/hide works when only a single variable for each type exists
    type = 'Exodiff'
    input = show_single_vars.i
    exodiff = show_single_vars_out.e

    requirement = "The system shall allow for output to be limited to a single auxiliary variable."
  [../]

  [./show_hide]
    type = 'Exodiff'
    input = show_hide.i
    exodiff = show_hide_out.e

    requirement = "The system shall allow for variables to be explicitly declared for and suppressed from output from within an output sub-block."
  [../]

  [./nemesis_hide]
    type = 'Exodiff'
    input = nemesis_hide.i
    min_parallel = 2
    max_parallel = 2
    exodiff = 'nemesis_hide_out.e.2.0 nemesis_hide_out.e.2.1'
    compiler = 'CLANG'
    platform = 'DARWIN'

    issues = '#1895'
    requirement = "The variables specified in an Output object's 'hide = ' list shall not appear in the output file."
  [../]
[]
